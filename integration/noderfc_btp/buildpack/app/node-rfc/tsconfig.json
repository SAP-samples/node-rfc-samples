{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": false,
    "stripInternal": true,
    "outDir": "./lib",
  },
  "include": [
    "src/ts/*"
  ]
}